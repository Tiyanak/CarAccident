<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_vehicle_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.fer.ruazosa.if47987.caraccident.caraccident.VehicleA">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/VehicleALL"
        android:orientation="vertical"
        android:background="#9a009cfd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/osATV"
            android:text="6. osiguranik/ugovaratelj osiguranja(vidi police osiguranja)"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/PrezimeAET"
            android:hint="PREZIME"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imeAET"
            android:hint="ime"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AdresaAET"
            android:hint="adresa"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/PostBrojAET"
            android:hint="poštanski broj"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drzavaAET"
            android:hint="država"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telmailAET"
            android:hint="tel. ili e-mail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voziloATV"
            android:textSize="20dp"
            android:text="7. vozilo"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/motornoATV"
            android:textSize="20dp"
            android:text="motorno vozilo"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/markaAET"
            android:hint="marka, tip"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registracijaMVAET"
            android:hint="registracijska oznaka"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drRegAMVET"
            android:hint="država registracije"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prikolicaATV"
            android:textSize="20dp"
            android:text="prikolica"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registracijaAPET"
            android:hint="registracijska oznaka"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drRegAPET"
            android:hint="država registracije"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drustvoOsATV"
            android:textSize="20dp"
            android:text="8. društvo za osiguranje(vidi policu osiguranja)"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ndAET"
            android:hint="NAZIV DRUŠTVA"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dbrPolAET"
            android:hint="broj police"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brZelKarteAET"
            android:hint="broj zelene karte"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/polOsZkVrijediATV"
            android:textSize="20dp"
            android:text="polica osiguranja ili zelena karta vrijedi"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vrijediOdAET"
            android:hint="od"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vrijediDoAET"
            android:hint="do"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/poslAET"
            android:hint="poslovnica (ili ured ili posrednik)"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nazivAET"
            android:hint="NAZIV"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adresaOsAET"
            android:hint="adresa"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drzOsAET"
            android:hint="država"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telmailOsAET"
            android:hint="tel. ili e-mail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kaskoAET"
            android:textSize="20dp"
            android:text="Je li šteta na vozilu pokrivena policom kasko osiguranja"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/VAPSCH">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nePSACB"
                android:text="ne"
                android:textSize="20dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/daPSACB"
                android:text="da"
                android:textSize="20dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vozacATV"
            android:textSize="20dp"
            android:text="9. vozač vozila (vidi vozačku dozvolu)"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prezVozAET"
            android:hint="PREZIME"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imeVozAET"
            android:hint="ime"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datRodVozAET"
            android:hint="datum rođenja"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adresaVozAET"
            android:hint="adresa"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drzVozAET"
            android:hint="država"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telmailVozAET"
            android:hint="tel. ili e-mail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vozDozAET"
            android:hint="vozačka dozvola br."/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/katVozAET"
            android:hint="kategorija (A, B...)"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vozDozVrijediAET"
            android:hint="vozačka dozvola vrijedi do"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mjestoUdaraATV"
            android:textSize="20dp"
            android:text="10. opišite mjesto prvotnog udara na vozilo A"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mjestoUdaraAET"
            android:hint="npr. desna strana prednjeg branika"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vidOsATV"
            android:textSize="20dp"
            android:text="11. vidljiva oštećenja na vozilu A"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vidOsAET"
            android:hint="npr. polupan prednji branik, staklo..."
            android:inputType="textMultiLine"
            android:ems="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/primjedbeATV"
            android:textSize="20dp"
            android:text="12. vlastite primjedbe"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/primjedbeAET"
            android:inputType="textMultiLine"
            android:ems="3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VoziloBButton"
            android:text="SLJEDEĆI KORAK"
            android:background="@android:color/holo_red_light"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
